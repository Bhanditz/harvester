%h1= t("resources.index.header")
- unless params[:all]
  %p
    .ui.button= link_to(t("resources.actions.show_all"), resources_path(all: true))
%p= t("resources.index.jobs", count: Delayed::Job.count)
%p= t("resources.index.harvest_jobs", count: Delayed::Job.where('handler LIKE "%object:Resource%"').count)
.ui.list
  - @resources.each do |resource|
    .item
      = link_to(resource.name, resource)
      - if resource.publish_status
        .ui.label= t("resources.publish_status.#{resource.publish_status}")
.ui.section
  = link_to(t("resources.create.action"), new_resource_path)
